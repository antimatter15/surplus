{
  "name": "Surplus",
  "version": "0.1",
  "description": "Add browser button for Google+",
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "19.png",
    "default_title": "Google+ Notifications",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://blogsearch.google.com/?extension=surplus"],
      "js": ["surplus.js"],
      "all_frames": true
    }
  ],
  "permissions": [
    "http://blogsearch.google.com/"
  ]
}
